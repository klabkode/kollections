      <?php
        $dir = './'; // change this to the path of the directory you want to list
        // get all files except for '.' and '..' and 'index.php'
        $files = array_diff(scandir($dir), array('..', '.', 'data', 'index.php'));
        if (empty($files)) {
          echo "<p class='no-files'>Oops! No projects deployed.</p>";
        } else {
          foreach ($files as $file) {
            if (is_dir($dir.$file)) { // only list directories
              echo '<div class="project-tile" onclick="window.open(\''.$file.'\', \'_blank\')">'.$file.'</div>';
            }
          }
        }
      ?>
    </div>
